// tsconfig.build.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": false,
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "src/__tests__"]
}
