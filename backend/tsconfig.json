{
    "ts-node": {
        "transpileOnly": true,
        "require": [
            "typescript-transform-paths/register"
        ],
    },
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": false,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
        "plugins": [
            {
                "transform": "typescript-transform-paths"
            },
        ]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}