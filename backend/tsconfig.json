{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": false,
        "outDir": "dist",
        "rootDir": "src",
        "moduleResolution": "node",
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}